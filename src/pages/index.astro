---
import { SITE } from '@config';
import { Icon } from 'astro-icon';
const canonicalURL = new URL(SITE.url, Astro.site);
const socialImageURL = new URL(`${SITE.url}share-og.png`, Astro.site);

const generateNodes = (word: string, nodeCount: number, wordCount: number) => {
  	let html = '';

	for (let i = 0; i < nodeCount; i++) {
		const direction = i % 2 === 0 ? 'left' : 'right';
		html += `<marquee direction="${direction}" height=35px><p>${word.repeat(wordCount)}</p></marquee>`;
	}
	return html;
};

const generatedHTML = generateNodes('NO ', 100, 200);
---

<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-R95S50EW7H"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-R95S50EW7H');
		</script>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />
		<!-- General Meta Tags -->
		<title>{SITE.title}</title>
		<meta name="title" content={SITE.title} />
		<meta name="description" content={SITE.description} />
		<meta name="author" content={SITE.author} />
		<!-- Open Graph / Facebook -->
		<meta property="og:title" content={SITE.title} />
		<meta property="og:description" content={SITE.description} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content={socialImageURL} />
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@st3phhays" />
		<meta name="twitter:creator" content="@st3phhays" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={SITE.title} />
		<meta name="twitter:description" content={SITE.description} />
		<meta name="twitter:image" content={socialImageURL} />
		<!-- Google Font -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
		<style>
			*, *::before, *::after {
				box-sizing: border-box;
			}
			body {
				font-family: 'Inter', sans-serif;
				margin: 0;
			}
			section {
				position: absolute;
				top: 3rem;
				left: 50%;
				transform: translateX(-50%);
				margin: auto 1rem;
				padding: 30px;
				background: white;
				z-index: 1;
				border: 3px solid black;
				text-align: center;
				margin-inline-start: 0;
				margin-inline-end: 0;
			}
			h1 {
				font-size: 3rem;
				margin-top: 0;
			}
			[astro-icon] {
				width: 40px;
				height: 40px;
			}
			@media (min-width: 576px) {
				section {
					top: 50%;
					transform: translate(-50%, -50%);
				}
				h1 {
					font-size: 5rem;
				}
			}
		</style>
	</head>
	<body>
		<section>
			<h1>Is Threads Dead?</h1>
			<a href={SITE.gitHubUrl} target="_blank" rel="noreferrer" title="Find isthreadsdead.com on GitHub."><Icon name="grommet-icons:github" /></a>
		</section>
		<Fragment set:html={generatedHTML} />
	</body>
</html>
